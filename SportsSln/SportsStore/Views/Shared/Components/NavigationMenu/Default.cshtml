@model IEnumerable<string>

<div class="gap-2 d-grid">
    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">
        Home
    </a>
    @foreach (string category in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(category == ViewBag.SelectedCategory ? "btn-primary": "btn-outline-secondary")" asp-action="Index" asp-controller="Home" asp-route-category="@category" asp-route-productPage="1">
            @category
        </a>
    }
</div> 